<div class="container my-5">
    <div class="row px-3">
        <div class="col-md-10 col-12 mx-auto border border-info rounded shadow px-4 px-lg-5 pt-3 pb-4">
            <p class="font-weight-bold text-center text-info" style="font-size: 30px">編輯餐廳</p>
            <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
                <div class="form-group row">
                    <label for="name" class="col-sm-3 col-lg-2 col-form-label">
                        餐廳名稱<span class="required-text">&nbsp;*</span>
                    </label>
                    <div class="col-sm-9 col-lg-10">
                        <input type="text" class="form-control" id="name" name="name" placeholder="請輸入餐廳名稱" value="{{restaurant.name}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="name_en" class="col-sm-3 col-lg-2 col-form-label">餐廳英文名稱</label>
                    <div class="col-sm-9 col-lg-10">
                        <input type="text" class="form-control" id="name_en" name="name_en" placeholder="請輸入餐廳英文名稱" value="{{restaurant.name_en}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="category" class="col-sm-3 col-lg-2 col-form-label">
                        餐廳類別<span class="required-text">&nbsp;*</span>
                    </label>
                    <div class="col-sm-9 col-lg-10">
                        <input type="text" class="form-control" id="category" name="category" placeholder="ex: 美式料理、日本料理" value="{{restaurant.category}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="phone" class="col-sm-3 col-lg-2 col-form-label">
                        餐廳電話<span class="required-text">&nbsp;*</span>
                    </label>
                    <div class="col-sm-9 col-lg-10">
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="請輸入餐廳電話" value="{{restaurant.phone}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="image" class="col-sm-3 col-lg-2 col-form-label">
                        餐廳圖片網址<span class="required-text">&nbsp;*</span>
                    </label>
                    <div class="col-sm-9 col-lg-10">
                        <input type="text" class="form-control" id="image" name="image" placeholder="ex: https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg" value="{{restaurant.image}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-sm-3 col-lg-2 col-form-label">
                        餐廳地址<span class="required-text">&nbsp;*</span>
                    </label>
                    <div class="col-sm-9 col-lg-10">
                        <input type="text" class="form-control" id="location" name="location" placeholder="請輸入餐廳地址" value="{{restaurant.location}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="google_map" class="col-sm-3 col-lg-2 col-form-label">
                        餐廳地圖<span class="required-text">&nbsp;*</span>
                    </label>
                    <div class="col-sm-9 col-lg-10">
                        <input type="text" class="form-control" id="google_map" 
                        name="google_map" placeholder="ex: https://goo.gl/maps/BJdmLuVdDbw" value="{{restaurant.google_map}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="rating" class="col-sm-3 col-lg-2 col-form-label">
                        餐廳評價<span class="required-text">&nbsp;*</span>
                    </label>
                    <div class="col-sm-9 col-lg-10">
                        <input type="number" class="form-control" id="rating" name="rating" placeholder="ex: 4.2，滿分為 5 分" min="0" max="5" step="0.1" value="{{restaurant.rating}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-sm-3 col-lg-2 col-form-label">
                        餐廳介紹<span class="required-text">&nbsp;*</span>
                    </label>
                    <div class="col-sm-9 col-lg-10">
                        <textarea class="form-control" rows="3" id="description" name="description" placeholder="請輸入餐廳介紹" required>{{restaurant.description}}
                        </textarea>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6 col-sm-6">
                        <a class="btn btn-warning btn-block text-white" href="/" role="button">返&nbsp;回</a>
                    </div>
                    <div class="col-6 col-sm-6">
                        <button type="submit" class="btn btn-info btn-block">
                            送&nbsp;出
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
